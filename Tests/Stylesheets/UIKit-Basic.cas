// Support for common UIKit properties

$border-width = 2;
//look vars can be on same line
$textInsets = 4 3 2 1; $defaultFontName = Avenir-Heavy;

UIView {
  background-color:#A2A2A2;
  content-mode: aspectFill;
  layer: @{
    border-width: $border-width;
    border-color: #A1A1A1;
    corner-radius: 7;
    shadow-color: red;
    shadow-offset: 1,3;
    shadow-opacity: 0.5;
    shadow-radius: 4;
  }
}

UITextField {
  font: $defaultFontName 12;
  text-color: #a0a0a0;
  text-alignment: right;
  content-vertical-alignment: bottom;
  background-image: test_image_5 1, 2, 3, 4;
  border-style:line;
  text-insets: $textInsets
}